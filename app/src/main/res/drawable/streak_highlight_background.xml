<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient background for streak highlight -->
    <gradient
        android:startColor="#FEF3C7"
        android:centerColor="#FDE68A"
        android:endColor="#F59E0B"
        android:angle="45"
        android:type="linear" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Subtle stroke -->
    <stroke
        android:width="1dp"
        android:color="#D97706" />

</shape>