<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_primary"
    android:padding="32dp"
    android:gravity="center">

    <!-- Logo Section -->
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_moodfit_logo"
        android:contentDescription="MoodFit logo"
        android:layout_marginBottom="32dp" />

    <!-- Welcome Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to MoodFit!"
        android:textSize="32sp"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        android:fontFamily="@font/barlow_semibold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Subtitle -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Let's personalize your fitness journey"
        android:textSize="18sp"
        android:textColor="@color/text_secondary"
        android:fontFamily="@font/opensans_regular"
        android:gravity="center"
        android:layout_marginBottom="48dp" />

    <!-- Progress Indicator -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="32dp">

        <View
            android:id="@+id/step_indicator_1"
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:background="@color/primary_color"
            android:layout_marginEnd="8dp" />

        <View
            android:id="@+id/step_indicator_2"
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:background="@color/text_tertiary"
            android:layout_marginEnd="8dp" />

        <View
            android:id="@+id/step_indicator_3"
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:background="@color/text_tertiary"
            android:layout_marginEnd="8dp" />

        <View
            android:id="@+id/step_indicator_4"
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:background="@color/text_tertiary" />

    </LinearLayout>

    <!-- Step Content Container -->
    <FrameLayout
        android:id="@+id/step_content_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Step 1: Username Input -->
        <LinearLayout
            android:id="@+id/step_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What should we call you?"
                android:textSize="24sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:fontFamily="@font/barlow_semibold"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter a name that motivates you!"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/opensans_regular"
                android:gravity="center"
                android:layout_marginBottom="32dp" />

            <!-- Username Input Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@color/card_background">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Your name"
                        app:boxBackgroundMode="none"
                        app:hintTextColor="@color/text_secondary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="@color/text_primary"
                            android:fontFamily="@font/opensans_regular"
                            android:maxLength="20"
                            android:singleLine="true"
                            android:inputType="textPersonName|textCapWords" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Character Counter -->
                    <TextView
                        android:id="@+id/tv_character_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/20"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="@font/opensans_regular"
                        android:layout_gravity="end"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Example Names -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Examples: Alex, Champion, Warrior, Sam"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/opensans_regular"
                android:gravity="center"
                android:alpha="0.7" />

        </LinearLayout>

        <!-- Step 2: Difficulty Selection -->
        <LinearLayout
            android:id="@+id/step_difficulty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What's your fitness level?"
                android:textSize="24sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:fontFamily="@font/barlow_semibold"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Don't worry, you can change this later"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/opensans_regular"
                android:gravity="center"
                android:layout_marginBottom="32dp" />

            <!-- Difficulty Options -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_beginner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:background="@color/card_background"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_beginner"
                        android:contentDescription="Beginner level"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Beginner"
                            android:textSize="18sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:fontFamily="@font/barlow_semibold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Just starting my fitness journey"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="@font/opensans_regular" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/check_beginner"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_check_circle"
                        android:contentDescription="Selected"
                        android:visibility="visible" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_intermediate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:background="@color/card_background"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_intermediate"
                        android:contentDescription="Intermediate level"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Intermediate"
                            android:textSize="18sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:fontFamily="@font/barlow_semibold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="I exercise regularly"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="@font/opensans_regular" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/check_intermediate"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_check_circle"
                        android:contentDescription="Selected"
                        android:visibility="gone" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_advanced"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:background="@color/card_background"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_advanced"
                        android:contentDescription="Advanced level"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Advanced"
                            android:textSize="18sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:fontFamily="@font/barlow_semibold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="I'm a fitness enthusiast"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="@font/opensans_regular" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/check_advanced"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_check_circle"
                        android:contentDescription="Selected"
                        android:visibility="gone" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </FrameLayout>

    <!-- Navigation Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp">

        <Button
            android:id="@+id/btn_skip"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Skip"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:background="@drawable/secondary_button_background"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/barlow_semibold"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Back"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:background="@drawable/secondary_button_background"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/barlow_semibold"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="2"
            android:text="Next"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/primary_button_background"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/barlow_semibold"
            android:enabled="false" />

    </LinearLayout>

</LinearLayout>
