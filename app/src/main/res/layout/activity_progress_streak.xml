<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_primary"
    android:padding="24dp"
    android:gravity="center">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Progress"
        android:textSize="28sp"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="48dp"
        android:fontFamily="@font/barlow_semibold" />

    <!-- Flame Icon and Streak Counter -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="40dp">

        <!-- Flame Icon Container with background circle for enhanced effect -->
        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginBottom="16dp">

            <!-- Background circle for glow effect -->
            <View
                android:id="@+id/flame_glow_background"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/flame_glow_background"
                android:alpha="0.3" />

            <!-- Main flame icon -->
            <ImageView
                android:id="@+id/iv_flame_icon"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_flame"
                android:contentDescription="Streak flame icon"
                android:scaleType="centerInside" />

        </FrameLayout>

        <TextView
            android:id="@+id/tv_streak_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 Days Streak"
            android:textSize="32sp"
            android:textColor="@color/accent_color"
            android:textStyle="bold"
            android:fontFamily="@font/barlow_semibold" />

    </LinearLayout>

    <!-- Motivational Message Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:layout_marginHorizontal="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@color/card_background"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_motivational_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keep going, you're on fire! ðŸ”¥"
                android:textSize="18sp"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2"
                android:fontFamily="@font/opensans_regular" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Stats Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This Week"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/opensans_regular" />

            <TextView
                android:id="@+id/tv_week_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 days"
                android:textSize="20sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:fontFamily="@font/barlow_semibold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Best Streak"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/opensans_regular" />

            <TextView
                android:id="@+id/tv_best_streak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 days"
                android:textSize="20sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:fontFamily="@font/barlow_semibold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>