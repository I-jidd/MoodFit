<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">
<!--        android:minHeight="match_parent">-->

        <!-- Progress Indicator -->
        <TextView
            android:id="@+id/tv_progress_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercise 1 of 3"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="@font/opensans_regular"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Exercise Icon -->
        <ImageView
            android:id="@+id/iv_exercise_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_fitness_splash"
            android:contentDescription="Exercise icon"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Exercise Name -->
        <TextView
            android:id="@+id/tv_exercise_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exercise Name"
            android:textSize="28sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:fontFamily="@font/barlow_semibold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Exercise Info Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/exercise_info_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@color/card_background">

                <!-- Exercise Description -->
                <TextView
                    android:id="@+id/tv_exercise_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Exercise description"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/opensans_regular"
                    android:lineSpacingMultiplier="1.3"
                    android:layout_marginBottom="16dp" />

                <!-- Exercise Stats Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <!-- Duration -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Duration"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="@font/opensans_regular" />

                        <TextView
                            android:id="@+id/tv_exercise_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10 min"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:fontFamily="@font/barlow_semibold" />

                    </LinearLayout>

                    <!-- Calories -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Calories"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="@font/opensans_regular" />

                        <TextView
                            android:id="@+id/tv_exercise_calories"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="~80 cal"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:fontFamily="@font/barlow_semibold" />

                    </LinearLayout>

                    <!-- Category -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Category"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="@font/opensans_regular" />

                        <TextView
                            android:id="@+id/tv_exercise_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cardio"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:fontFamily="@font/barlow_semibold" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Instructions Header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Instructions"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:fontFamily="@font/barlow_semibold"
                    android:layout_marginBottom="12dp" />

                <!-- Exercise Instructions -->
                <TextView
                    android:id="@+id/tv_exercise_instructions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Exercise instructions will be displayed here"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="@font/opensans_regular"
                    android:lineSpacingMultiplier="1.4" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
<!--            android:layout_marginTop="auto">-->

            <!-- Start Exercise Button -->
            <Button
                android:id="@+id/btn_start_exercise"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Start Exercise"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/primary_button_background"
                android:elevation="4dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/barlow_semibold" />

            <!-- Skip Exercise Button -->
            <Button
                android:id="@+id/btn_skip_exercise"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Skip This Exercise"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:background="@drawable/secondary_button_background"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/barlow_semibold"
                android:visibility="visible" />

        </LinearLayout>

        <!-- Bottom padding for better spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />

    </LinearLayout>

</ScrollView>