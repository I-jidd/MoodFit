<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exercise Demonstrations"
            android:textSize="28sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/barlow_semibold" />

        <!-- GIF/Image Display Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/card_background">

                <ImageView
                    android:id="@+id/iv_exercise_demo"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_exercise_demo"
                    android:contentDescription="Exercise demonstration"
                    android:background="@color/demo_placeholder" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/tv_exercise_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Push-ups"
                        android:textSize="24sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/barlow_semibold" />

                    <TextView
                        android:id="@+id/tv_exercise_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Start in plankd position with hands slightly wider than shoulders. Lower your body until chest nearly touches floor, then push back up. Keep core tight throughout movement."
                        android:textSize="16sp"
                        android:textColor="@color/text_secondary"
                        android:lineSpacing="1.3"
                        android:fontFamily="@font/opensans_regular" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Exercise Stats -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:background="@drawable/stat_card_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Difficulty"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="@font/opensans_regular" />

                <TextView
                    android:id="@+id/tv_difficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beginner"
                    android:textSize="18sp"
                    android:textColor="@color/accent_color"
                    android:textStyle="bold"
                    android:fontFamily="@font/barlow_semibold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/stat_card_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duration"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="@font/opensans_regular" />

                <TextView
                    android:id="@+id/tv_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2-3 min"
                    android:textSize="18sp"
                    android:textColor="@color/accent_color"
                    android:textStyle="bold"
                    android:fontFamily="@font/barlow_semibold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/stat_card_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reps"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="@font/opensans_regular" />

                <TextView
                    android:id="@+id/tv_reps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10-15"
                    android:textSize="18sp"
                    android:textColor="@color/accent_color"
                    android:textStyle="bold"
                    android:fontFamily="@font/barlow_semibold" />

            </LinearLayout>

        </LinearLayout>

        <!-- Navigation Button -->
        <Button
            android:id="@+id/btn_next_exercise"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Next Exercise"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/primary_button_background"
            android:layout_marginHorizontal="16dp"
            android:elevation="4dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/barlow_semibold" />

        <!-- Exercise Counter -->
        <TextView
            android:id="@+id/tv_exercise_counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exercise 1 of 20"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/opensans_regular" />

    </LinearLayout>

</ScrollView>